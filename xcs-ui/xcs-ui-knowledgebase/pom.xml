<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xwikisas</groupId>
    <artifactId>xcs-ui</artifactId>
    <version>2016-1-SNAPSHOT</version>
  </parent>
  <artifactId>xcs-ui-knowledgebase</artifactId>
  <name>XWiki Collaboration Suite - UI - Knowledge Base</name>
  <packaging>xar</packaging>
  <description>Default set of wiki pages containing both content and default applications for XWiki Collaboration Suite Knowledge Base (sub)wiki.</description>
  <properties>
    <xwiki.extension.category>flavor</xwiki.extension.category>
  </properties>
  <dependencies>
    <!-- Depend on the XCS wiki XAR to share content across (sub)wikis-->
    <dependency>
      <groupId>com.xwikisas</groupId>
      <artifactId>xcs-ui-wiki</artifactId>
      <version>${project.version}</version>
      <type>xar</type>
    </dependency>
    <dependency>
      <groupId>org.xwiki.contrib</groupId>
      <artifactId>xwiki-macro-pdfviewer</artifactId>
      <version>1.5</version>
      <type>xar</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.contrib</groupId>
      <artifactId>application-flashmessages-ui</artifactId>
      <version>1.1.4</version>
      <type>xar</type>
      <scope>runtime</scope>
    </dependency>
    <!-- The tour application -->
    <dependency>
      <groupId>org.xwiki.contrib</groupId>
      <artifactId>application-tour-ui</artifactId>
      <version>${tourapplication.version}</version>
      <type>xar</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-plugin</artifactId>
        <version>${commons.version}</version>
        <configuration>
          <transformations>
            <!-- Specify custom panels -->
            <transformation>
              <artifact>com.xwikisas:xcs-ui-wiki</artifact>
              <file>XWiki/XWikiPreferences.xml</file>
              <xpath>/xwikidoc/object/property/leftPanels</xpath>
              <value>Panels.XCSNavigation,Panels.TagCloud</value>
            </transformation>
            <!-- Change the width of left panels in order to accomodate the content -->
            <transformation>
              <artifact>com.xwikisas:xcs-ui-wiki</artifact>
              <file>XWiki/XWikiPreferences.xml</file>
              <xpath>/xwikidoc/object/property/leftPanelsWidth</xpath>
              <value>Large</value>
            </transformation>
            <!-- Specify a different default Color Theme -->
            <transformation>
              <artifact>com.xwikisas:xcs-ui-wiki</artifact>
              <file>XWiki/XWikiPreferences.xml</file>
              <xpath>/xwikidoc/object/property/colorTheme</xpath>
              <value>FlamingoThemes.XCS-Green</value>
            </transformation>
          </transformations>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
